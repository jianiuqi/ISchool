<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <RelativeLayout
        android:id="@+id/detail_entry_layout"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_margin="7dp"
        android:background="@drawable/selector_lesson_grid_item_bg" >

        <TextView
            android:id="@+id/lesson_detail_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_margin="15dp"
            android:text="01"
            android:textColor="@android:color/white"
            android:textSize="50sp" />
    </RelativeLayout>

    <ImageView
        android:id="@+id/star_get_1"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:src="@drawable/icon_star_grey"
        />
    
    <ImageView 
        android:id="@+id/star_get_2"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:src="@drawable/icon_star_grey"
        android:layout_marginLeft="12dp"
        />
    
    <ImageView 
        android:id="@+id/star_get_3"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:src="@drawable/icon_star_grey"
        android:layout_marginLeft="24dp"
        />
</FrameLayout>